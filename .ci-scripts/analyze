#!/bin/sh

set -euxo pipefail

./.ci-scripts/bootstrap

if [ -z "${XCODE_DESTINATION-}" ]; then
    xcodebuild analyze -project TBCCore.xcodeproj -scheme "$XCODE_SCHEME" -sdk "$XCODE_SDK"
else
    xcodebuild analyze -project TBCCore.xcodeproj -scheme "$XCODE_SCHEME" -sdk "$XCODE_SDK" -destination "$XCODE_DESTINATION"
fi
